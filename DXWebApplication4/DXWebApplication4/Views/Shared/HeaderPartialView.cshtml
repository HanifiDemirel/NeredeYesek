@model HeaderViewRenderMode

@if(Model == HeaderViewRenderMode.Title) {
    <div class="templateTitle">
        @Html.ActionLink("NeredeYesek", "Index", "Home")
    </div>
} else { 
    if(Model == HeaderViewRenderMode.Full) { 
        <div class="headerTop">
            <div class="templateTitle">
                @Html.ActionLink("NeredeYesek", "Index", "Home")
            </div>
        </div>
    }

    <div class="headerMenu">
            @* DXCOMMENT: Configure the header menu *@
    @Html.DevExpress().Menu(settings => {
    settings.Name = "HeaderMenu";
    settings.ItemAutoWidth = false;
    settings.ControlStyle.CssClass = "headerMenu";
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Items.Add("Ana Sayfa").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Home" });
    settings.Items.Add("Restoranlar").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Restorans" });
    settings.Items.Add("Grup").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Uyelers" });
    settings.Items.Add("Puanlar").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Puanlar" });
    settings.Items.Add("Ýstatistikler").NavigateUrl = DevExpressHelper.GetUrl(new { Controller = "Ýstatistikler" });
}).GetHtml()
    </div>
}